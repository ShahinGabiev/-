#include <iostream>
#include <cmath>

int main() {
    double k;
    double p; 
    double r; 
    std::cout << "Введите сумму кредита (k): ";
    std::cin >> k;
    std::cout << "Введите процентную ставку (p): ";
    std::cin >> p;
    std::cout << "Введите прибыль в год (r): ";
    std::cin >> r;

    int n = 0; 
    double totalDebt = k; 

    while (r * n < totalDebt) {
        n++;
        totalDebt *= (1 + p / 100);
    }

    std::cout << "Предприниматель сможет погасить кредит через " << n << " лет." << std::endl;

    return 0;
}
